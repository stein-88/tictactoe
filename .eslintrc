{
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "impliedStrict": true,
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    },
    "extends": "airbnb",
    "settings": {
        "import/resolver": {
            "babel-module": {}
        }
    },
    "rules": {
        "no-restricted-exports": 0,
        "react/prop-types": 0,
        "import/prefer-default-export": 0,
        "no-tabs": 0,
        "semi": 0,
        "react/function-component-definition": [
            2,
            {
                "namedComponents": "arrow-function"
            }
        ],
        "indent": "off",
        "react/jsx-indent": "off",
        "react/jsx-indent-props": "off",
        "linebreak-style": 0,
        "no-alert": 0,
        "no-console": 0
    }
}